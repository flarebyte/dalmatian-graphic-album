}

struct ThinkingCharacter {
    entityId: uint16;
}

struct ScreamingCharacter {
    entityId: uint16;
}

struct WhisperingCharacter {
    entityId: uint16;
}

struct BroadcastingCharacter {
    entityId: uint16;
}

